<UserControl x:Class="ChaturbateDownloader.Controls.ChaturbateEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChaturbateDownloader.Controls"
             mc:Ignorable="d" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Width="468" Height="39">
    <Grid Margin="0,0,10,0" Width="auto">
        <TextBlock x:Name="chaturbateStar" HorizontalAlignment="Left" Margin="10,10,0,10" TextWrapping="Wrap" VerticalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" Width="141"/>
        <Button x:Name="logButton" Content="Log" HorizontalAlignment="Right" Margin="312,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="removeButton" Content="Remove" HorizontalAlignment="Right" Margin="0,10,80,0" VerticalAlignment="Top" Width="75"/>
        <Ellipse Name="StatusLed" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="10" Margin="156,15,0,0" Stroke="Black" VerticalAlignment="Top" Width="10"/>
        <Button x:Name="stopAndJoinButton" Content="Stop &amp; Join" HorizontalAlignment="Right" Margin="0,10,160,0" VerticalAlignment="Top" Width="75" Click="StopAndJoin"/>
    </Grid>
</UserControl>
